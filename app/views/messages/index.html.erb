<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>

 <div class="panel-body">
    <% @messages.each do |message| %>
    <span class="label label-info"><%= message.name %></span>
    <%= message.body %>
  <br>
  <%# "<%="の=は結果を埋め込むか否かの違い %>
  <% end %>    
 </div>
</div>



<%= form_for(Message.new) do |f| %>
  名前:
<%= f.text_area :name, 
style: "border: 1px solid #ccc; height: 22px; vertical-align: middle;"  %>

  内容:
<%= f.text_area :body, style: "border: 1px solid #ccc; height: 22px; vertical-align: middle;" %>
<%= f.submit class:"btn btn-sm btn-primary" %>

<% end %>
